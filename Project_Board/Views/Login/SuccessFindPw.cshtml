
@{
    ViewBag.Title = "Home Page";
}
@*ID情報*@

<head>
    <style>
        .idResult {
            margin: 20px;
            text-align: center;
            font-size: 35px;
            font-weight: 700;
            white-space: nowrap;
        }
    </style>
</head>

<h1 style="text-align:center ; margin: 90px 0">パスワード情報</h1>

<div>
    @foreach (var item in Model)
    {
            <span class="idResult" style="color: #0000cd; margin: auto auto auto 40%;">@item.Name</span>
            <span class="idResult">様の</span>
            <br/>
            <span class="idResult" style="margin: auto auto auto 25%; ">パスワードは、「 </span>
            <span class="idResult" style="color: #0000cd;">@item.Password </span>
            <span class="idResult">」です。</span>
    }
</div>

<div class="form-group" style="text-align: center; margin: 90px 0; font-size: 40px; ">
    <a class="btn btn-warning" href="https://localhost:44342/">ホーム</a>
</div>