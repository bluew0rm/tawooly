
@{
    ViewBag.Title = "Home Page";
}
@*ID情報*@
<head>
    <style>
        p{
            margin: 20px;
            text-align: center;
            font-size: large;
            font-weight: 700;
        }
    </style>
</head>

<h1 style="text-align:center ; margin: 90px 0">ID情報</h1>

<div>
    @foreach (var item in Model)
    {
        <span class="idResult" style="color: #0000cd; margin: auto auto auto 40%;">@item.Name</span>
        <span class="idResult">様の</span>
        <br />
        <span class="idResult" style="margin: auto auto auto 30%; ">IDは、「 </span>
        <span class="idResult" style="color: #0000cd;">@item.Id </span>
        <span class="idResult">」です。</span>
    }
</div>

<div class="form-group" style="text-align: center; font-size: 40px;">
    <a class="btn btn-warning" href="https://localhost:44342/">ホーム</a>
</div>